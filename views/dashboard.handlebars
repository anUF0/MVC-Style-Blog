{{#if posts.length}}
  <section>
    <div class='row align-items-center'>
      <h2>Hello, {{user.name}}!</h2>
      <p>Click on the Title to Edit Any of Your Post</p>
    </div>
    <br />
    {{#each posts as |post|}}
      <input type='hidden' name='post-id' value='{{post.id}}' />
      <div class='card'>
        <div class='card-header'>
          <h4><a class='link' href='/dashboard/edit/{{id}}'>{{title}}</a></h4>
        </div>
        <button class='btn btn-danger' id='del-post-btn'>Delete Post</button>
      </div>
    {{/each}}

  </section>
{{/if}}
<button type='submit' class='btn'><a href='/dashboard/new'>Add New Post</a></button>